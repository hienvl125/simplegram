// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum ConversationType {
    GROUP
    PRIVATE
}

enum MessageType {
    TEXT
    IMAGE
    FILE
}

model Conversation {
    id        String           @id @default(cuid())
    name      String
    cType     ConversationType
    createdAt DateTime
    updatedAt DateTime
}

model Message {
    id             String      @id @default(cuid())
    body           String
    mType          MessageType
    userId         String
    conversationId String
    deleted        Boolean
    createdAt      DateTime
}

model User {
    id       String  @id @default(cuid())
    name     String?
    email    String  @unique
    password String
    image    String?
}
